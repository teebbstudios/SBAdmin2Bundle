<table class="table table-striped" id="dataTable">
    <thead>
        <tr>
            <th scope="col">
                <input type="checkbox" class="form-check check-all" title="{{ 'Check All'|trans({}, teebb_sbadmin2.transDomain) }}">
            </th>
            {% for property in list_item_properties %}
                <th scope="col" class="{{ property.class }}">
                    {%- if property.sortable == true %}
                        {{ knp_pagination_sortable(pagination, property.label|trans({}, teebb_sbadmin2.transDomain), 'o.'~property.property) }}
                    {% else %}
                        {{ property.label|trans({}, teebb_sbadmin2.transDomain) }}
                    {% endif -%}
                </th>
            {% endfor %}
            <th scope="col">{{ 'Options'|trans({}, teebb_sbadmin2.transDomain) }}</th>
        </tr>
    </thead>
    <tbody>
        {% for item in pagination %}
            <tr>
                <td scope="row">
                    <input type="checkbox" class="form-check" value="{{ item.id }}">
                </td>
                {% for property in list_item_properties %}
                    <td class="{{ property.class }}">
                        {%- if property['action'] is defined %}
                            <a href="{{ path(admin.routes.getRouteName(property['action']), {'id': item.id }) }}">{{ admin.propertyAccessor.getValue(item, property.property) }}</a>
                        {% else %}
                            {{ admin.propertyAccessor.getValue(item, property.property) }}
                        {% endif -%}
                    </td>
                {% endfor %}
                <td class="text-nowrap">
                    {% for action in list_item_actions %}
                        {% if is_granted(action['roles']) or action['roles'] is empty %}
                            <a href="{{ path(admin.routes.getRouteName(action.name), {'id': item.id}) }}" class="btn btn-sm shadow-sm {{ action['class'] }}">
                                {% if action['type'] == 'group' %}<i class="fas {{ action['icon'] }} fa-sm text-white-50 pr-2"></i>{% endif %}{{ action['name']|upper|trans({}, teebb_sbadmin2.transDomain) }}
                            </a>
                        {% endif %}
                    {% endfor %}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="{{  list_item_properties|length + 2}}">
                    {{ 'Woooooo! It\'s Nothing! Empty! Blank!'|trans({}, teebb_sbadmin2.transDomain) }}
                </td>
            </tr>
        {% endfor %}
    </tbody>
</table>